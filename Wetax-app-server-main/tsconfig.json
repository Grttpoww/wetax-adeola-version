{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": ["es2021", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": ["./src/**/*", "scripting/ai.ts", "scripting/test.data.ts", "scripting/test-2.data.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
